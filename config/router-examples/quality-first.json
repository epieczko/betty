{
  "PORT": 3456,
  "Providers": [
    {
      "name": "openrouter",
      "api_base_url": "https://openrouter.ai/api/v1/chat/completions",
      "api_key": "${OPENROUTER_API_KEY}",
      "models": [
        "openai/gpt-4",
        "openai/o1",
        "google/gemini-2.5-pro-preview",
        "anthropic/claude-3.5-sonnet"
      ]
    }
  ],
  "Router": {
    "default": "openrouter,openai/gpt-4",
    "background": "openrouter,anthropic/claude-3.5-sonnet",
    "think": "openrouter,openai/o1",
    "longContext": "openrouter,google/gemini-2.5-pro-preview"
  },
  "description": "Quality-first configuration for Betty. Uses best-in-class models for each context: GPT-4 for default, O1 for complex reasoning, Gemini 2.5 Pro for large context (2M+ tokens)."
}
