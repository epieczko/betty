{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://betty-framework.dev/schemas/openapi-spec.json",
  "title": "OpenAPI Specification Artifact",
  "description": "Schema for OpenAPI 3.0+ specification artifacts produced and consumed by Betty skills",
  "type": "object",
  "required": ["openapi", "info", "paths"],
  "properties": {
    "openapi": {
      "type": "string",
      "pattern": "^3\\.[0-9]+\\.[0-9]+$",
      "description": "OpenAPI version (3.0.0 or higher)"
    },
    "info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": {
          "type": "string",
          "description": "API title"
        },
        "version": {
          "type": "string",
          "description": "API version"
        },
        "description": {
          "type": "string"
        },
        "contact": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "email": {"type": "string", "format": "email"},
            "url": {"type": "string", "format": "uri"}
          }
        },
        "license": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "url": {"type": "string", "format": "uri"}
          }
        }
      }
    },
    "servers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "paths": {
      "type": "object",
      "description": "API paths and operations"
    },
    "components": {
      "type": "object",
      "description": "Reusable components (schemas, responses, parameters, etc.)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "x-betty-metadata": {
      "type": "object",
      "description": "Betty Framework metadata",
      "properties": {
        "generated_by": {"type": "string"},
        "generated_at": {"type": "string", "format": "date-time"},
        "template": {"type": "string"},
        "guideline": {"type": "string"}
      }
    }
  }
}
