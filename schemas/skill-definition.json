{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skill Definition",
  "description": "Complete skill configuration in YAML format. Defines skill metadata, inputs, outputs, artifact metadata, permissions, and entrypoints.",
  "type": "object",
  "required": [
    "name",
    "description",
    "permissions",
    "entrypoints"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Skill name"
    },
    "version": {
      "type": "string",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Skill purpose"
    },
    "inputs": {
      "type": "array",
      "description": "Input parameters"
    },
    "outputs": {
      "type": "array",
      "description": "Output files/artifacts"
    },
    "artifact_metadata": {
      "type": "object",
      "description": "Produces/consumes declarations"
    },
    "permissions": {
      "type": "array",
      "description": "Required permissions"
    },
    "entrypoints": {
      "type": "array",
      "description": "Command entrypoints with handlers"
    }
  }
}